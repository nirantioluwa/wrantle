<% content_for :title, "Create Account - Wrantle" %>

<div class="d-flex flex-justify-left">
  <%= render(Primer::Box.new(p: 4, mt: 4, mb: 4, style: "width: 100%; max-width: 600px;")) do %>
    <%= render(Primer::Beta::Text.new(tag: :h1, mb: 4)) do %>
      Create Account
    <% end %>

    <%= render(Primer::Box.new(bg: :success, border: false, p: 4, border_radius: 0)) do %>
      <% if @user.errors.any? %>
        <%= render(Primer::Beta::Flash.new(scheme: :danger, full: true, mb: 4)) do %>
          <h4 class="mb-2">Please correct the following errors:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>

      <%= form_for @user, url: registrations_path, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :email_address, "Email Address", class: "d-block mb-2 text-bold" %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "your.email@example.com",
              class: "form-control width-full" %>
          <%= render(Primer::Beta::Text.new(color: :muted, mt: 1, mb: 0)) do %>
            This will be your login username
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :password, class: "d-block mb-2 text-bold" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "Enter your password",
              maxlength: 72,
              class: "form-control width-full" %>
          <%= render(Primer::Beta::Text.new(color: :muted, mt: 1, mb: 0)) do %>
            Use at least 10 characters
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :password_confirmation, "Confirm Password", class: "d-block mb-2 text-bold" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "Repeat your password",
              maxlength: 72,
              class: "form-control width-full" %>
          <%= render(Primer::Beta::Text.new(color: :muted, mt: 1, mb: 0)) do %>
            Type your password again
          <% end %>
        </div>

        <div class="d-flex flex-items-center flex-justify-between">
          <%= form.submit "Create Account", class: "btn btn-primary" %>
          <%= link_to "Sign In", new_session_path, class: "Link--muted" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
