<%# Meta tags %>
<% content_for :title, "IP Protection & Portfolio Management - Wrantle" %>
<% content_for :meta_description, "Expert IP portfolio management and protection services. We help businesses manage global IP portfolios, protect patents and trademarks, handle licensing, and optimize IP structures across jurisdictions." %>
<% content_for :meta_keywords, "IP management, patent strategy, trademark protection, IP portfolio, technology licensing, brand protection, IP structure, design rights" %>
<% content_for :og_title, "IP Protection & Portfolio Management | Wrantle" %>
<% content_for :og_description, "Strategic IP portfolio management and protection services. Get expert help with trademark registration, patent strategy, technology licensing, and IP structure optimization." %>

<%# IP Services Page %>
<%# Services Navigation %>
<%= render "shared/services_navigation" %>

<%# Hero Section %>
<%= render(Primer::Box.new(mt: 6, p: 4)) do %>
  <%= render(Primer::Beta::Heading.new(tag: :h1, font_weight: :bold, classes: "hero-heading")) { "IP management and technology licensing" } %>
<% end %>

<%# Services Content Section %>
<%= render(Primer::Box.new(p: 4, mb: 6)) do %>
  <div class="features-cards">
    <%= render(Primer::Box.new(bg: :subtle, border: true, border_right: 0, border_bottom: 0, p: 4, border_radius: 0)) do %>
