        <%= render "shared/intellectual_property/portfolio_icon" %>
      </div>
      <%= render(Primer::Beta::Text.new(tag: :h3, classes: "features-card-heading")) { "Portfolio Audit & Strategy" } %>
      <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Review your IP assets and align them with business goals." } %>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, border_left: 0, border_bottom: 0, border_right: 0, p: 4, border_radius: 0)) do %>
