      <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Protect and manage IP assets in digital platforms." } %>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, p: 4, border_top: 0, border_right: 0, border_radius: 0)) do %>
