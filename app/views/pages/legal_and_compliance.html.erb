<%# Meta tags %>
<% content_for :title, "Legal & Compliance Advisory - Wrantle" %>
<% content_for :meta_description, "Strategic legal and compliance services for global businesses. We provide regulatory guidance, contract management, and compliance frameworks across jurisdictions." %>
<% content_for :meta_keywords, "legal advisory, regulatory compliance, contract management, data protection, employment law, dispute resolution, legal audit" %>
<% content_for :og_title, "Legal & Compliance Advisory | Wrantle" %>
<% content_for :og_description, "Expert legal and compliance services for international businesses. Get support with regulations, contracts, and compliance frameworks." %>

<%# Legal Services Page %>
<%# Services Navigation %>
<%= render "shared/services_navigation" %>

<%# Hero Section %>
<%= render(Primer::Box.new(mt: 6, p: 4)) do %>
  <%= render(Primer::Beta::Heading.new(tag: :h1, font_weight: :bold, classes: "hero-heading")) { "Legal and compliance framework management" } %>
<% end %>

<%# Services Content Section %>
<%= render(Primer::Box.new(p: 4, mb: 6)) do %>
