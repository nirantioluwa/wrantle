<%# Finance Services Page %>

<%# Hero Section %>
<%= render(Primer::Box.new(mt: 6, p: 4)) do %>
  <%= render(Primer::Beta::Heading.new(tag: :h1, font_weight: :bold, classes: "hero-heading")) { "Finance and Investment Advisory" } %>
<% end %>

