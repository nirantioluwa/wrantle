<%= form_with(model: writing, url: writing.new_record? ? writings_path : writing_path(writing.slug), local: true) do |form| %>
  <% if writing.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

      <ul>
        <% writing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :content, style: "display: block" %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, %w[draft published], { include_blank: "Select status" }, class: "form-select" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :published_at, style: "display: block" %>
    <%= form.datetime_field :published_at, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :excerpt, "Excerpt (for social media sharing)", style: "display: block" %>
    <%= form.text_area :excerpt, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :featured_image, "Featured Image (for social media sharing)", style: "display: block" %>
    <% if form.object.featured_image.attached? %>
      <div class="mb-2">
        <%= image_tag form.object.featured_image, class: "img-fluid", style: "max-width: 300px" %>
      </div>
    <% end %>
    <%= form.file_field :featured_image, class: "form-control", accept: 'image/png,image/jpg,image/jpeg' %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
