<% content_for :title, "Reset Password - Wrantle" %>

<div class="d-flex flex-justify-left">
  <%= render(Primer::Box.new(p: 4, mt: 4, mb: 4, style: "width: 100%; max-width: 600px;")) do %>
    <%= render(Primer::Beta::Text.new(tag: :h1, mb: 4)) do %>
      Update your password
    <% end %>

    <%= render(Primer::Box.new(bg: :success, border: false, p: 4, border_radius: 0)) do %>
      <% if flash[:alert] %>
        <%= render(Primer::Beta::Flash.new(scheme: :danger, full: true, mb: 4)) do %>
          <%= flash[:alert] %>
        <% end %>
      <% end %>

      <%= form_with url: password_path(params[:token]), method: :put, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :password, "New Password", class: "d-block mb-2 text-bold" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "Enter new password",
              maxlength: 72,
              class: "form-control width-full" %>
          <%= render(Primer::Beta::Text.new(color: :muted, mt: 1, mb: 0)) do %>
            Use at least 8 characters
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :password_confirmation, "Confirm New Password", class: "d-block mb-2 text-bold" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "Repeat new password",
              maxlength: 72,
              class: "form-control width-full" %>
          <%= render(Primer::Beta::Text.new(color: :muted, mt: 1, mb: 0)) do %>
            Type your new password again
          <% end %>
        </div>

        <div class="d-flex flex-items-center">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
