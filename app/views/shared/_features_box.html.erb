<%= render(Primer::Box.new(p: 4, mt: 4, border: false, border_right: 0, border_left: 0, border_bottom: 0)) do %>
  <%= render(Primer::Beta::Text.new(tag: :h3, classes: "features-heading")) { "We are focused on serving teams shaping the future of emerging markets." } %>
  
  <div class="features-cards">
    <%= render(Primer::Box.new(bg: :subtle, p: 4, border_radius: 0, border: true, border_right: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/growth_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "A single north star" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "We are focused on a single north star" } %>
        </div>
      </div>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, p: 4, border_radius: 0, border_left: 0, border_right: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/compass_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "Join our team" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Want to join our team?" } %>
        </div>
      </div>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, p: 4, border_radius: 0, border_left: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/pillars_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "Coffee chat" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Have a coffee chat with us?" } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
