<%# Contact Box Partial %>
<%= render(Primer::Box.new(p: 4, mt: 4, border: false, border_right: 0, border_left: 0, border_bottom: 0)) do %>
  <%= render(Primer::Beta::Text.new(tag: :h3, classes: "features-heading")) { title } %>
  <%= render(Primer::Beta::Text.new(tag: :p, classes: "services-subheader")) { subtitle } %>
  
  <div class="features-cards">
    <%= render(Primer::Box.new(bg: :subtle, p: 4, border_radius: 0, border: true, border_right: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/schedule_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "Schedule a Consultation" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Book a meeting with our strategy experts" } %>
        </div>
      </div>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, p: 4, border_radius: 0, border_left: 0, border_right: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/info_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "Request Information" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Get detailed information about our services" } %>
        </div>
      </div>
    <% end %>

    <%= render(Primer::Box.new(bg: :subtle, border: true, p: 4, border_radius: 0, border_left: 0)) do %>
      <div class="feature-card-content">
        <div class="service-icon">
          <%= render "shared/assessment_icon" %>
        </div>
        <div>
          <%= render(Primer::Beta::Link.new(href: "#", classes: "features-card-heading")) do %>
            <%= render(Primer::Beta::Text.new(tag: :h3)) { "Quick Assessment" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, classes: "features-card-text")) { "Get a quick assessment of your needs" } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
