<%# Balance Icon %>
<div class="icon-container">
  <svg class="balance-icon" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- White background rectangle -->
    <rect width="85" height="65" x="-20" y="10" fill="white"/>
    
    <!-- Balance scale design -->
    <path d="M50 20 L50 80" 
          stroke="#1a7f37"
          stroke-width="2"
          stroke-linecap="round"/>
    
    <!-- Scale beam -->
    <path d="M20 35 L80 35" 
          stroke="#1a7f37"
          stroke-width="2"
          stroke-linecap="round"/>
    
    <!-- Left scale pan -->
    <path d="M20 35 C20 45, 35 45, 35 35" 
          stroke="#1a7f37"
          stroke-width="2"
          stroke-linecap="round"
          fill="none"/>
    
    <!-- Right scale pan -->
    <path d="M65 35 C65 45, 80 45, 80 35" 
          stroke="#1a7f37"
          stroke-width="2"
          stroke-linecap="round"
          fill="none"/>
    
    <!-- Base -->
    <path d="M35 80 L65 80" 
          stroke="#1a7f37"
          stroke-width="2"
          stroke-linecap="round"/>
  </svg>
</div>
